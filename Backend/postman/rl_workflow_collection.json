              "raw": "{\n  \"wallet\": \"{{testWallet}}\",\n  \"features\": {\n    \"transactionCount\": 10,\n    \"totalVolume\": 1000,\n    \"avgTransactionValue\": 100,\n    \"uniqueAddresses\": 5,\n    \"suspiciousPatterns\": 0,\n    \"accountAge\": 180,\n    \"riskLevel\": \"low\"\n  }\n}",
