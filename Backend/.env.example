# Backend Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGO_URI=mongodb://localhost:27017/fraudDB
PORT=5050

# Email Configuration (Brevo/SendinBlue)
BREVO_USER=your-verified-email@domain.com
BREVO_PASS=your-brevo-password
BREVO_API_KEY=your-brevo-api-key
ALERT_RECIPIENT_EMAIL=alerts@yourdomain.com
ALERT_SENDER_EMAIL=noreply@yourdomain.com

# Webhook URLs
WEBHOOK_URL=https://webhook.site/your-webhook-id
ALERT_WEBHOOK_URL=http://localhost:5050/simulate-rbi-alert
RBI_WEBHOOK_URL=http://localhost:5050/simulate-rbi-alert

# Blockchain Configuration
RPC_URL=https://rpc.ankr.com/eth_sepolia
PRIVATE_KEY=your-private-key-here
CONTRACT_ADDRESS=your-contract-address

# Supabase Configuration (if using)
supabaseUrl=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_PROJECT_REF=your-project-ref
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# Admin Credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password

# Kafka Configuration
KAFKA_ENABLED=true
KAFKA_BROKER=localhost:9092
KAFKAJS_NO_PARTITIONER_WARNING=1

# WebSocket Configuration
BLACKHOLE_WS=ws://localhost:8080

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Hybrid Storage Configuration
# Local Cache Configuration
LOCAL_CACHE_DIR=/var/cache/evidence/
CACHE_MAX_AGE_HOURS=168

# AWS S3 Configuration
ENABLE_S3=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=fraud-evidence-system

# IPFS Configuration
ENABLE_IPFS=false
IPFS_API_URL=http://localhost:5001